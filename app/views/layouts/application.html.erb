<!DOCTYPE html>
<html>
  <head>
    <title>DeliveryManagement</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
  </head>
  <header>
      <div class="header-logo">
        <%= link_to("Top", "/") %>
      </div>
      <ul class="header-menus">
        <% if @current_user %>
            <li>
              <%= @current_user.name %>
            </li>
            <li>
              <%= link_to("新規配送", "/requests/new") %>
            </li>
            <li>
              <%= button_to("ログアウト", "/logout", {method:"post"}) %>
            </li>
          <% else %>
            <li>
              <%= link_to("新規配送", "/requests/new") %>
            </li>
            <li>
              <%= link_to("ログイン", "/login") %>
            </li>
          <% end %>
        
      </ul>
    </header>
  <% if flash[:notice] %>
      <div class="flash">
        <%= flash[:notice] %>
      </div>
    <% end %>  
  <% if flash[:alert] %>
      <div class="flash alert">
        <%= flash[:alert] %>
      </div>
  <% end %>  
  <body>
    <%= yield %>
  </body>
</html>
