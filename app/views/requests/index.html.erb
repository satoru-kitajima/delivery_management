<div class="main posts-index">
  <div class="container">
    <table>
      <thead>
        <tr>
          <th>配送日時</th>
          <th>集荷希望</th>
          <th>配達希望</th>
          <th>ステータス</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @requests.each do |delivery_request| %>
          <tr>
            <td><%= delivery_request.delivery_date %></td>
            <td><%= delivery_request.pickup_required ? 'はい' : 'いいえ' %></td>
            <td><%= delivery_request.delivery_required ? 'はい' : 'いいえ' %></td>
            <td><%= delivery_request.status %></td>
            <td><%= link_to '表示', "/requests/#{delivery_request.id}" %></td>
            <td><%= link_to '編集', "/requests/#{delivery_request.id}/edit" %></td>
            <td><%= button_to '削除', "/requests/#{delivery_request.id}", method: :delete %></td>
          </tr> 
        <% end %>
      </tbody>
    </table>
  </div>
</div>